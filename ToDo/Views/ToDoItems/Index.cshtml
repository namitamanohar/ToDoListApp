@model IEnumerable<ToDo.Models.ToDoItem>

@{
    ViewData["Title"] = "Index";
}

<h1>To Do List Organizer</h1>

<p>
    <a asp-action="Create">Create New</a>
  
</p>
    <a type="button" class="btn btn-primary"  asp-action="Index" asp-route-filterButton="To Do"  >To Do</a>
    <a type="button" class="btn btn-secondary" asp-action="Index" asp-route-filterButton="Progress" >In Progress </a>
    <a type="button" class="btn btn-warning"  asp-action="Index" asp-route-filterButton="Done" >Done</a>
<table class="table">
    <thead>
        <tr>
      
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                List Status
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
 
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToDoStatus.Status)
            </td>
        
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
